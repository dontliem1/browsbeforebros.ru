            </a>
        </div>

        <!--Toggle button (hidden on large screens)-->
        {% if navigation.items %}
        <button @click="isOpen = !isOpen" type="button" class="ml-auto block sm:hidden px-2 text-primary-500 hover:text-primary-500 focus:outline-none focus:text-primary-500" :class="{ 'transition transform-180': isOpen }" aria-label="Menu">
            <svg class="h-6 w-6 fill-current" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 24 24">
                <path x-show="isOpen" fill-rule="evenodd" clip-rule="evenodd" d="M18.278 16.864a1 1 0 0 1-1.414 1.414l-4.829-4.828-4.828 4.828a1 1 0 0 1-1.414-1.414l4.828-4.829-4.828-4.828a1 1 0 0 1 1.414-1.414l4.829 4.828 4.828-4.828a1 1 0 1 1 1.414 1.414l-4.828 4.829 4.828 4.828z"/>
                <path x-show="!isOpen" fill-rule="evenodd" d="M4 5h16a1 1 0 0 1 0 2H4a1 1 0 1 1 0-2zm0 6h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2zm0 6h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2z"/>
            </svg>
        </button>
        {% endif %}

        <!--Menu-->
        <div class="w-full flex-grow sm:flex sm:items-center sm:w-auto text-center" :class="{ 'block shadow-3xl': isOpen, 'hidden': !isOpen }" @click.away="isOpen = false" x-show.transition="true">

            {% if navigation.items %}

                <ul class="pt-6 sm:pt-0 list-reset sm:flex justify-end flex-1 items-center">
                    <li class="nav__item mr-3">
                        <a @click="isOpen = false" class="text-ml inline-block text-gray-500 no-underline hover:text-rose-300 py-2 px-4{% if path == home %} text-rose-300{% endif %}" {% if path == home %}aria-current="page"{% else %}href="/"{% endif %}>Главная</a>
                    </li>
                    {% for item in navigation.items %}
                        <li class="nav__item mr-3">
                            <a @click="isOpen = false" class="text-ml inline-block text-gray-500 no-underline hover:text-rose-300 py-2 px-4{% if item.url in page.url %} text-rose-300{% endif %}" {% if item.url in page.url %}aria-current="page"{% else %}href="{{ item.url }}"{% endif %}>{{ item.text }}</a>
                        </li>
                    {% endfor %}
                </ul>

            {% endif %}
        </div>
    </nav>
</div>